<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">
    <RelativeLayout
        android:id="@+id/selectcity_bar"
        android:layout_width="fill_parent"
        android:layout_height="45.0dp">
        <RelativeLayout
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:layout_toLeftOf="@+id/selectcity_search_buttonrela">
            <ImageView
                android:id="@+id/title_selectCity_back"
                android:layout_width="45.0dp"
                android:layout_height="45.0dp"
                android:src="@drawable/back"/>
            <EditText
                android:id="@+id/selectcity_search"
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/search_city"
                android:hint="   搜索全国城市(中文)"
                android:paddingLeft="35.0dp"
                android:singleLine="true"></EditText>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/selectcity_search_buttonrela"
            android:layout_width="80.0dp"
            android:layout_height="45.0dp"

            android:layout_alignParentRight="true">
            <ImageView
                android:id="@+id/selectcity_search_button"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:src="@drawable/search_button" />
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/selectcity_bar">
        <ListView
            android:id="@+id/selectcity_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>
    </RelativeLayout>
</RelativeLayout>